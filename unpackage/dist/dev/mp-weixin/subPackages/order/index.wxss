/* 项目主题变量 */
.order-container.data-v-c7cccef5 {
  height: 100vh;
  background-color: #F7F8FA;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 状态筛选栏 */
.status-filter.data-v-c7cccef5 {
  background: #FFFFFF;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}
.filter-scroll.data-v-c7cccef5 {
  white-space: nowrap;
}
.filter-tabs.data-v-c7cccef5 {
  display: flex;
  padding: 24rpx 0;
  justify-content: space-around;
}
.filter-tab.data-v-c7cccef5 {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  transition: all 0.3s ease;
  position: relative;
  flex: 1;
  justify-content: center;
}
.filter-tab.active.data-v-c7cccef5::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 6rpx;
  background: #7363FF;
  border-radius: 3rpx;
}
.tab-text.data-v-c7cccef5 {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  transition: color 0.3s ease;
}
.filter-tab.active .tab-text.data-v-c7cccef5 {
  color: #7363FF;
  font-weight: 600;
}

/* 订单列表 */
.order-list.data-v-c7cccef5 {
  flex: 1;
  padding: 24rpx;
  height: 0;
}

/* 空状态 */
.empty-state.data-v-c7cccef5 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}
.empty-image.data-v-c7cccef5 {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}
.empty-text.data-v-c7cccef5 {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 16rpx;
}
.empty-desc.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #cccccc;
}

/* 订单卡片 */
.order-cards.data-v-c7cccef5 {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.order-card.data-v-c7cccef5 {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

/* 订单头部 */
.order-header.data-v-c7cccef5 {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}
.order-info.data-v-c7cccef5 {
  flex: 1;
}
.order-number.data-v-c7cccef5 {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}
.order-time.data-v-c7cccef5 {
  font-size: 24rpx;
  color: #999999;
}
.order-status.data-v-c7cccef5 {
  font-size: 24rpx;
  font-weight: 500;
}
.status-pending.data-v-c7cccef5 {
  color: #ff6b35;
}
.status-to-serve.data-v-c7cccef5 {
  color: #007bff;
}
.status-in-progress.data-v-c7cccef5 {
  color: #28a745;
}
.status-completed.data-v-c7cccef5 {
  color: #6c757d;
}
.status-cancelled.data-v-c7cccef5 {
  color: #b0b0b0;
}
.status-refunded.data-v-c7cccef5 {
  color: #00bcd4;
}

/* 服务信息和订单金额行 */
.service-amount-row.data-v-c7cccef5 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 服务信息 */
.service-info.data-v-c7cccef5 {
  display: flex;
  align-items: flex-start;
  flex: 1;
}
.service-image.data-v-c7cccef5 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.service-details.data-v-c7cccef5 {
  flex: 1;
  flex-direction: column;
}
.service-meta.data-v-c7cccef5 {
  display: flex;
  justify-content: space-between;
  gap: 8rpx;
  align-items: flex-start;
}
.service-duration.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #1a1a1a;
}
.service-price.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #1a1a1a;
}

/* 下单时间信息 */
.order-time-info.data-v-c7cccef5 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.time-label.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #666666;
}
.time-value.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #999999;
}

/* 订单金额 */
.order-amount.data-v-c7cccef5 {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 40rpx;
}
.amount-label.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #666666;
}
.amount-value.data-v-c7cccef5 {
  font-size: 30rpx;
  color: #f43f5e;
  font-weight: 600;
}

/* 操作按钮 */
.order-actions.data-v-c7cccef5 {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}
.action-btn.data-v-c7cccef5 {
  padding: 16rpx 32rpx;
  border-radius: 99999rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
  box-sizing: border-box;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.action-btn.primary.data-v-c7cccef5 {
  background: #7363FF;
  color: #FFFFFF;
  border-color: #7363FF;
}
.action-btn.primary.data-v-c7cccef5:active {
  background: #6354e6;
  transform: scale(0.96);
}
.action-btn.secondary.data-v-c7cccef5 {
  background: #FFFFFF;
  color: #666666;
  border-color: #e9ecef;
}
.action-btn.secondary.data-v-c7cccef5:active {
  background: #f8f9fa;
  transform: scale(0.96);
}

/* 加载更多 */
.load-more.data-v-c7cccef5 {
  text-align: center;
  padding: 32rpx 0;
}
.loading-text.data-v-c7cccef5,
.load-more-text.data-v-c7cccef5 {
  font-size: 26rpx;
  color: #999999;
}