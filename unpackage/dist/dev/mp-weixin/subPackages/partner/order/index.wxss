/* 项目主题变量 */
.order-container.data-v-a24e0011 {
  height: 100vh;
  background-color: #F7F8FA;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 状态筛选栏 */
.status-filter.data-v-a24e0011 {
  background: #FFFFFF;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}
.filter-scroll.data-v-a24e0011 {
  white-space: nowrap;
}
.filter-tabs.data-v-a24e0011 {
  display: flex;
  padding: 0rpx 10rpx 24rpx 0;
  justify-content: space-around;
}
.filter-tab.data-v-a24e0011 {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  transition: all 0.3s ease;
  position: relative;
  flex: 1;
  justify-content: center;
}
.filter-tab.active.data-v-a24e0011::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 6rpx;
  background: #7363FF;
  border-radius: 3rpx;
}
.tab-text.data-v-a24e0011 {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  transition: color 0.3s ease;
}
.filter-tab.active .tab-text.data-v-a24e0011 {
  color: #7363FF;
  font-weight: 600;
}

/* 订单列表滑动容器 */
.order-content.data-v-a24e0011 {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.order-swiper.data-v-a24e0011 {
  flex: 1;
  height: 100%;
}
.order-scroll-view.data-v-a24e0011 {
  height: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 空状态 */
.empty-state.data-v-a24e0011 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}
.empty-image.data-v-a24e0011 {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}
.empty-text.data-v-a24e0011 {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 16rpx;
}
.empty-desc.data-v-a24e0011 {
  font-size: 26rpx;
  color: #cccccc;
}

/* 订单卡片 */
.order-cards.data-v-a24e0011 {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 20rpx;
}
.order-card.data-v-a24e0011 {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

/* 订单头部 */
.order-header.data-v-a24e0011 {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.order-info.data-v-a24e0011 {
  flex: 1;
}
.order-time.data-v-a24e0011 {
  font-size: 26rpx;
  color: #999999;
}
.order-status.data-v-a24e0011 {
  font-size: 24rpx;
  font-weight: 500;
}
.status-pending.data-v-a24e0011 {
  color: #ff6b35;
}
.status-to-serve.data-v-a24e0011 {
  color: #007bff;
}
.status-in-progress.data-v-a24e0011 {
  color: #28a745;
}
.status-completed.data-v-a24e0011 {
  color: #6c757d;
}
.status-cancelled.data-v-a24e0011 {
  color: #b0b0b0;
}
.status-refunded.data-v-a24e0011 {
  color: #00bcd4;
}
.status-refunding.data-v-a24e0011 {
  color: #ff9800;
}

/* 客户信息 */
.customer-info.data-v-a24e0011 {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.customer-avatar.data-v-a24e0011 {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.customer-details.data-v-a24e0011 {
  flex: 1;
}
.customer-name.data-v-a24e0011 {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 500;
  margin-bottom: 4rpx;
  display: block;
}
.customer-phone.data-v-a24e0011 {
  font-size: 24rpx;
  color: #666666;
}

/* 服务信息 */
.service-info.data-v-a24e0011 {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.service-image.data-v-a24e0011 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.service-details.data-v-a24e0011 {
  flex: 1;
}
.service-name.data-v-a24e0011 {
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 8rpx;
  display: block;
}
.service-meta.data-v-a24e0011 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.service-price.data-v-a24e0011 {
  font-size: 26rpx;
  color: #1a1a1a;
}
.service-duration.data-v-a24e0011 {
  font-size: 26rpx;
  color: #1a1a1a;
}
.service-amount.data-v-a24e0011 {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.amount-label.data-v-a24e0011 {
  font-size: 26rpx;
  color: #666666;
}
.amount-value.data-v-a24e0011 {
  font-size: 28rpx;
  color: #f43f5e;
  font-weight: 600;
}

/* 服务地址和时间 */
.service-location-time.data-v-a24e0011 {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.location-info.data-v-a24e0011,
.time-info.data-v-a24e0011 {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}
.location-info.data-v-a24e0011:last-child,
.time-info.data-v-a24e0011:last-child {
  margin-bottom: 0;
}
.location-label.data-v-a24e0011,
.time-label.data-v-a24e0011 {
  font-size: 26rpx;
  color: #666666;
  min-width: 140rpx;
  flex-shrink: 0;
}
.location-value.data-v-a24e0011,
.time-value.data-v-a24e0011 {
  font-size: 26rpx;
  color: #1a1a1a;
  flex: 1;
  word-break: break-all;
  line-height: 1.4;
}

/* 操作按钮 */
.order-actions.data-v-a24e0011 {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}
.action-btn.data-v-a24e0011 {
  padding: 16rpx 32rpx;
  border-radius: 99999rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
  box-sizing: border-box;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.action-btn.primary.data-v-a24e0011 {
  background: #7363FF;
  color: #FFFFFF;
  border-color: #7363FF;
}
.action-btn.primary.data-v-a24e0011:active {
  background: #6354e6;
  transform: scale(0.96);
}
.action-btn.depart.data-v-a24e0011 {
  background: #4CAF50;
  color: #FFFFFF;
  border-color: #4CAF50;
}
.action-btn.depart.data-v-a24e0011:active {
  background: #45a049;
  transform: scale(0.96);
}
.action-btn.secondary.data-v-a24e0011 {
  background: #FFFFFF;
  color: #666666;
  border-color: #e9ecef;
}
.action-btn.secondary.data-v-a24e0011:active {
  background: #f8f9fa;
  transform: scale(0.96);
}
.action-btn.info.data-v-a24e0011 {
  background: transparent;
  color: #999999;
  border-color: transparent;
  cursor: default;
  padding: 16rpx 0;
}
.action-btn.info.data-v-a24e0011:active {
  background: transparent;
  transform: none;
}

/* 提示容器 */
.tip-container.data-v-a24e0011 {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

/* 自动开始服务提示 */
.auto-start-tip.data-v-a24e0011 {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  border: 1rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  max-width: -webkit-fit-content;
  max-width: fit-content;
  gap: 8rpx;
}
.tip-icon.data-v-a24e0011 {
  width: 34rpx;
  height: 34rpx;
  flex-shrink: 0;
}
.tip-text.data-v-a24e0011 {
  font-size: 24rpx;
  color: #856404;
  font-weight: 500;
  text-align: center;
  line-height: 1.4;
  white-space: nowrap;
}

/* 加载更多 */
.load-more.data-v-a24e0011 {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}
.loading-text.data-v-a24e0011 {
  font-size: 26rpx;
  color: #999999;
}