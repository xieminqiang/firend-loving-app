/* 项目主题变量 */
.partner-container.data-v-16ee0c05 {
  height: 100vh;
  background: #F7F8FA;
  display: flex;
  flex-direction: column;
}
.status-bar.data-v-16ee0c05 {
  background: #FFFFFF;
}
.nav-bar.data-v-16ee0c05 {
  background: #FFFFFF;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}
.back-btn.data-v-16ee0c05 {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}
.back-btn.data-v-16ee0c05:active {
  background: rgba(0, 0, 0, 0.08);
  transform: scale(0.96);
}
.back-icon.data-v-16ee0c05 {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}
.back-text.data-v-16ee0c05 {
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: 500;
  margin-left: 8rpx;
}
.nav-title.data-v-16ee0c05 {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  text-align: center;
  flex: 1;
}
.nav-placeholder.data-v-16ee0c05 {
  width: 120rpx;
}
.main-content.data-v-16ee0c05 {
  flex: 1;
  overflow: hidden;
}
.loading-container.data-v-16ee0c05 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: #F7F8FA;
}
.loading-spinner.data-v-16ee0c05 {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E5E5E5;
  border-top: 4rpx solid #7363FF;
  border-radius: 50%;
  animation: spin-16ee0c05 1s linear infinite;
  margin-bottom: 20rpx;
}
@keyframes spin-16ee0c05 {
0% {
    transform: rotate(0deg);
}
100% {
    transform: rotate(360deg);
}
}
.loading-text.data-v-16ee0c05 {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}
.content-scroll.data-v-16ee0c05 {
  height: 100%;
  background: #F7F8FA;
}
.scroll-content.data-v-16ee0c05 {
  min-height: 100%;
}
.content-swiper.data-v-16ee0c05 {
  height: calc(100vh - 88rpx - 120rpx);
}

/* 底部TabBar样式 */
.tab-bar.data-v-16ee0c05 {
  background: #FFFFFF;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  /* 安全区域适配 - 有安全区域时使用safe-area-inset-bottom，没有时使用40rpx */
  padding-bottom: max(40rpx, env(safe-area-inset-bottom));
  padding-top: 10rpx;
  box-sizing: border-box;
}
.tab-item.data-v-16ee0c05 {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
  box-sizing: border-box;
}
.tab-item.data-v-16ee0c05:active {
  transform: scale(0.95);
}
.tab-icon.data-v-16ee0c05 {
  width: 50rpx;
  height: 50rpx;
  transition: all 0.3s;
}
.tab-text.data-v-16ee0c05 {
  font-size: 22rpx;
  margin-top: 6rpx;
  color: #666666;
  font-weight: 500;
  transition: all 0.3s;
  line-height: 1.2;
  /* 防止文字被截断 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}
.tab-item.active .tab-text.data-v-16ee0c05 {
  color: #7363FF;
  font-weight: 600;
}